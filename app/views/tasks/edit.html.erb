<div class="container-fluid">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4 central">
      <h1>Edit Task</h1>
        <%= bootstrap_form_for @task do |f| %>
          <div class="form-group">
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.text_area :description %>
          </div>
          <div class="form-group">
            <%= f.select :category, Task::CATEGORIES, help: 'Read about page if you are not sure what category to choose' %>
          </div>
          <%= f.submit "Edit task" %>
        <% end %>
    </div>
  </div>
</div>
