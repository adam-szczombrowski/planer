<div class="container-fluid">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4 central">
      <h1>Create an account</h1>
        <%= bootstrap_form_for @user do |f| %>
          <div class="form-group">
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.email_field :email %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, help: "Must be at least 4 characters long" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation %>
          </div>
          <%= f.submit "Create my account" %>
        <% end %>
    </div>
  </div>
</div>
